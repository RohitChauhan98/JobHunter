# ─── Database ────────────────────────────────────────────────
DATABASE_URL="postgresql://user:password@your-neon-host.neon.tech/jobhunter?sslmode=require"

# ─── Auth ────────────────────────────────────────────────────
JWT_SECRET="change-me-to-a-random-64-char-string"
JWT_EXPIRES_IN="7d"

# ─── Server ──────────────────────────────────────────────────
PORT=4000
NODE_ENV="development"
CORS_ORIGIN="http://localhost:3000"

# ─── AI Providers (users add their own keys via dashboard) ───
# These are optional server-level defaults / fallbacks
OPENAI_API_KEY=""
ANTHROPIC_API_KEY=""
OPENROUTER_API_KEY=""

# ─── Local LLM ──────────────────────────────────────────────
# URL of a local LLM server (e.g. Ollama, LM Studio, vLLM)
LOCAL_LLM_URL="http://localhost:11434"
LOCAL_LLM_MODEL="llama3"
