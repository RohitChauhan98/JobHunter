{
  "manifest_version": 3,
  "name": "JobHunter",
  "version": "0.1.0",
  "description": "Intelligent job application assistant â€” auto-fill forms and generate tailored responses.",
  "permissions": [
    "storage",
    "activeTab",
    "cookies",
    "scripting"
  ],
  "host_permissions": [
    "*://*.greenhouse.io/*",
    "*://*.lever.co/*",
    "*://*.myworkdayjobs.com/*",
    "*://*.wellfound.com/*",
    "*://*.ashbyhq.com/*",
    "*://*.smartrecruiters.com/*",
    "http://localhost/*"
  ],
  "background": {
    "service_worker": "background/index.js"
  },
  "content_scripts": [
    {
      "matches": [
        "*://*.greenhouse.io/*",
        "*://*.lever.co/*",
        "*://*.myworkdayjobs.com/*",
        "*://*.wellfound.com/*",
        "*://*.ashbyhq.com/*",
        "*://*.smartrecruiters.com/*"
      ],
      "js": ["content/index.js"],
      "css": [],
      "run_at": "document_idle"
    }
  ],
  "action": {
    "default_popup": "popup/index.html",
    "default_icon": {
      "16": "icons/icon-16.png",
      "48": "icons/icon-48.png",
      "128": "icons/icon-128.png"
    }
  },
  "options_page": "options/index.html",
  "icons": {
    "16": "icons/icon-16.png",
    "48": "icons/icon-48.png",
    "128": "icons/icon-128.png"
  }
}
